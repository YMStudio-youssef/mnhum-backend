<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<!-- My CSS -->
	<link rel="stylesheet" href="/css/dashboard.css">

	<title>تحديث الشخصية</title>
</head>
<body>


    <!-- SIDEBAR -->
    <section id="sidebar">
		<a href="#" class="brand">
		  <i class='bx bxs-smile'></i>
		  <span class="text">AdminHub</span>
		</a>
		<ul class="side-menu top">
		  <li class="active">
			<a href="/admin">
			  <i class='bx bxs-dashboard' ></i>
			  <span class="text">Dashboard</span>
			</a>
		  </li>
		  <li>
			<a href="/admin/tables">
			  <i class='bx bxs-doughnut-chart' ></i>
			  <span class="text">Tables</span>
			</a>
		  </li>
		</ul>
		<ul class="side-menu">
		  <li>
			<a href="/admin/settings">
			  <i class='bx bxs-cog' ></i>
			  <span class="text">Settings</span>
			</a>
		  </li>
		</ul>
	  </section>
		<!-- SIDEBAR -->



	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<i class='bx bx-menu' ></i>
			<form action="#">
				<div class="form-input">

				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>
			<label for="switch-mode" class="switch-mode"></label>
			<a href="#" class="notification">
				<i class='bx bxs-bell' ></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="img/people.png">
			</a>
		</nav>
		<!-- NAVBAR -->

		<!-- MAIN -->
		<main>
			<div class="head-title">
				<div class="left">
					<h1>Dashboard</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#">Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>
				<a href="#" class="btn-download">
					<i class='bx bxs-cloud-download' ></i>
					<span class="text">Download Data</span>
				</a>
			</div>

			<ul class="box-info">
				<li>
					<i class='bx bxs-calendar-check' ></i>
					<span class="text">
						<h3><%= characterCount %></h3>
						<p>Characters</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-group' ></i>
					<span class="text">
						<h3><%= companyCount %></h3>
						<p>Companies</p>
					</span>
				</li>
				<li>
					<i class='bx bxs-dollar-circle' ></i>
					<span class="text">
						<h3><%= catgCount %></h3>
						<p>Categories</p>
					</span>
				</li>
			</ul>


			<div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Recent Users</h3>
					</div>
                    <div class="body">
                        <h1>Update Character: <%= character.name %></h1>
                        <form action="/characterUpdate" method="post" novalidate enctype="multipart/form-data">
                            <br>
                            <input type="file" name="image">
                            <br>
                            <input type="text" name="firstname" value="<%= character.firstName %>">
                            <input type="text" name="character" value="<%= character.firstName %>" hidden>
                            <br>
                            <input type="text" name="lastname" value="<%= character.lastName %>">
                            <br>
                            <input type="text" name="nickname" value="<%= character.nickName %>">
                            <br>
                            <input type="date" name="birthday" value="<%= character.birthday %>">
                            <br>
                            <input type="date" name="dieday" value="<%= character.dieday %>">
                            <br>
                            <select name="nationality">
                                <option value="<%= character.nationality %>"><%= character.nationality %></option>
                                <% countries.forEach((country) => { %>
                                    <option value="<%= country.title %>"><%= country.title %></option>
                                <% }) %>
                            </select>
                            <br>
                            <select name="catg">
                                <option value="<%= character.catg %>"><%= character.catg %></option>
                                <% catgs.forEach((catg) => { %>
                                    <option value="<%= catg.title %>"><%= catg.title %></option>
                                <% }) %>
                            </select>
                            <br>
                            <input type="text" name="job" value="<%= character.job %>">
                            <br>
                            <input type="date" name="historicalPeriod" value="<%= character.historicalPeriod %>">
                            <br>
                            <style>
                                .wrapper{
                                    display: flex;
                                    gap: 20px;
                                }
                                .wrapper .col{
                                    display: flex;
                                    flex-direction: column;
                                    gap: 20px;
                                }
                                #option-1, #option-2{width: 45%;}
                                /* #option-2{width: 50%;} */
                            </style>
                            <div class="wrapper">
                                <% if(character.type == 'ذكر'){ %>
                                    <div class="col">
                                        <input type="radio" name="type" id="option-1" checked value="ذكر">
                                        <label for="option-1" class="option option-1"><span>ذكر</span></label>
                                    </div>
                                    <div class="col">
                                        <input type="radio" name="type" id="option-2" value="انثى">
                                        <label for="option-2" class="option option-2"><span>انثى</span></label>
                                    </div>
                                <% }else{ %>
                                    <input type="radio" name="type" id="option-1" value="ذكر">
                                    <label for="option-1" class="option option-1"><span>ذكر</span></label>
                                    <input type="radio" name="type" id="option-2" checked value="انثى">
                                    <label for="option-2" class="option option-2"><span>انثى</span></label>
                                <% } %>
                            </div>
                            <br>
                            <textarea name="desc" cols="30" rows="10"><%= character.desc %></textarea>
                            <br>
                            <button type="submit">Add Character</button>
                            <br>
                        </form>
                    </div>
				</div>
			</div>
		</main>
		<!-- MAIN -->
	</section>
	<!-- CONTENT -->
	
    <!-- Include jQuery Library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="/js/dashboard.js"></script>
</body>
</html>