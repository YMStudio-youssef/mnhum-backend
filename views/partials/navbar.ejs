<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/reset.css">
</head>
<body>
    <header>
        <div class="container">
            <nav>
                <div class="logo-container">
                    <img src="images/logo.png" alt="" class="logo">
                </div>
                <ul>
                    <li><a href="/" class="active">الرئيسية</a></li>
                    <li><a href="/catgs">التصنيفات</a></li>
                    <li><a href="/addCharacter">اضف شخصية</a></li>
                    <li><a href="/addCompany">اضف شركة</a></li>
                </ul>
                <ul>
                    <li>
                        <select name="" id="">
                            <option value="">السعودية</option>
                            <option value="">مصر</option>
                            <option value="">قطر</option>
                            <option value="">الاردن</option>
                        </select>
                    </li>
                    <li class="login-btn">
                        <li class="login-btn">
                            <% if(user){ %>
                                <%= user.name %>
                            <% }else{ %>
                                <a href="/login">
                                    <button type="submit" style="background-color: <%= btnColor.value %>">
                                        <i class="fa-solid fa-user"></i>
                                        تسجيل الدخول
                                    </button>
                                </a>
                            <% } %>
                        </li>
                    </li>
                    <li>
                        <i class="fa-solid fa-bars menu"></i>
                    </li>
                </ul>
            </nav>
            <div class="responsive-menu">
                <ul>
                    <li><a href="/" class="active">الرئيسية</a></li>
                    <li><a href="/catgs">التصنيفات</a></li>
                    <li><a href="/addcharacter">اضف شخصية</a></li>
                    <li><a href="/addcompany">اضف شركة</a></li>
                    <li class="login-btn">
                        <a href="/login">
                            <button type="submit" style="background-color: <%= btnColor.value %>">
                                <i class="fa-solid fa-user"></i>
                                تسجيل الدخول
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <div class="container">
        <section class="header" style="background: linear-gradient(90deg, <%= headingColor1.value %> 0%, <%= headingColor2.value %> 45%, <%= headingColor3.value %> 100%) !important">
            <div class="content" style="width: 100% !important">
                <% texts.forEach((text) => { %>
                    <% if(text.name == 'Header-Heading1'){%>
                        <h1><%= text.value %></h1>
                    <% } %>
                <% }) %>
                <h2>ابحث ضمن <%= DocumentsCount %> شخصية ومؤسسة</h2>
                <div class="search-box">
                    <form action="/search" method="post" novalidate>
                        <div class="right">
                            <i class="fa-solid fa-magnifying-glass"></i>
                            <input type="search" class="search-input" name="query" placeholder="ابحث عن شخصية او مؤسسة">
                        </div>
                        <div class="left">
                            <button type="submit">ابحث</button>
                        </div>
                    </form>
                </div>
                <div class="trends">
                    <% tags.forEach((tag) => { %>
                        <button>
                            <a href="/tags/<%= tag._id %>" style="color: white;">
                                <i class="fa-solid fa-arrow-trend-up"></i>
                                <%= tag.title %>
                            </a>
                        </button>
                    <% }) %>
                    <!-- <button>تصفح الكل</button> -->
                </div>
            </div>
        </section>
    </div>
</body>
</html>