<%- include('partials/navbar') %>
    <link rel="stylesheet" href="css/style.css">
    <title><%= tag.title %></title>
    <main>
        <div class="container">
            <section class="header">
                <div class="content">
                    <h1>من هم؟ اكبر قاعدة بيانات للشخصيات والمؤسسات العربية</h1>
                    <h2>ابحث ضمن 150483 شخصية ومؤسسة</h2>
                    <div class="search-box">
                        <form action="/search" method="post" novalidate>
                            <div class="right">
                                <i class="fa-solid fa-magnifying-glass"></i>
                                <input type="search" class="search-input" name="query" placeholder="ابحث هن شخصية او مؤسسة">
                            </div>
                            <div class="left">
                                <button type="submit">ابحث</button>
                            </div>
                        </form>
                    </div>
                    <div class="trends">
                        <button>
                            <i class="fa-solid fa-arrow-trend-up"></i>
                            مؤسسات اعلانية
                        </button>
                        <button>
                            <i class="fa-solid fa-arrow-trend-up"></i>
                            ضيوف ثمانية 
                        </button>
                        <button>
                            <i class="fa-solid fa-arrow-trend-up"></i>
                            رؤساء تنفيذيون
                        </button>
                        <button>
                            <i class="fa-solid fa-arrow-trend-up"></i>
                            مصارف 
                        </button>
                        <button>
                            <i class="fa-solid fa-arrow-trend-up"></i>
                            رؤساء الشركات العربية
                        </button>
                        <button>تصفح الكل</button>
                    </div>
                </div>
            </section>
            <section class="trends-characters">
                <h2 class="heading">الشخصيات الموجودة</h2>
                <div class="characters-box">
                    <% characters.forEach((character) => { %>
                        <a href="/character/<%= character._id %>">
                            <div class="character">
                                <div class="image">
                                    <img src="data:image/jpeg;base64, <%= character.image %>" alt="Uploaded Image" style="height: 180px;">
                                </div>
                                <div class="info">
                                    <h3 class="char-name" style="color: black;"><%= character.firstName %> <%= character.lastName %></h3>
                                    <p class="char-bio"><%= character.desc.substring(0, 50) %>...</p>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                </div>
                <center>
                    <button class="btn">تصفح المزيد</button>
                </center>
            </section>
            <section class="trends-companys">
                <h2 class="heading">المؤسسات الموجودة  </h2>
                <div class="companys-box">
                    <% companies.forEach((company) => { %> 
                        <a href="/company/<%= company._id %>">
                            <div class="company">
                                <div class="image">
                                    <img src="data:image/jpeg;base64, <%= company.image %>" alt="Uploaded Image" style="height: 180px;">
                                </div>
                                <div class="info">
                                    <h3 class="comp-title" style="color: black;"><%= company.arabicName %></h3>
                                </div>
                            </div>
                        </a> 
                    <% }) %>
                </div>
                <center>
                    <button class="btn">عرض الكل</button>
                </center>
            </section>
        </div>
    </main>
<%- include('partials/footer') %>